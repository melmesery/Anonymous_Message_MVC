<%- include("./shared/header")%>
<body>
  <div class="container signup-con">
    <div class="row align-items-center justify-content-around">
      <div class="col-md-4">
        <div class="card p-5 my-5 text-center rounded-5 border-0">
          <img
            src="http://localhost:5000/<%=user?.profilePic%>"
            alt="profile"
            class="w-50 mx-auto mb-5"
          />
          <h1 class="fw-bold"><%=user?.userName%></h1>
        </div>
      </div>
      <div class="col-md-7">
        <div class="card p-5 my-5 rounded-0">
          <p class="fs-4 fw-bold mb-3">Leave A Constructive Message</p>
          <form action="/message/<%=user?._id%>" method="POST">
            <%if(MessageContent) { %>
            <div class="form-group my-2">
              <p class="text-danger fw-bold"><%=MessageContent%></p>
            </div>
            <% } %>
            <div class="form-group my-2">
              <textarea
                placeholder="Message..."
                name="message"
                class="form-control rounded-0"
                cols="30"
                rows="3"
              ></textarea>
            </div>
            <div class="form-group my-2">
              <button class="btn btn-success rounded-0 mt-3 send">Send</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("./shared/script")%>
</body>
