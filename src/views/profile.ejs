        <div class="card p-5 my-5 text-center rounded-5 ">
          <img src="<%=user?.profilePic%>" alt="" class="w-25 mx-auto mb-3" />
          <h1 class="fw-bold"><%=user?.userName%></h1>
          <a
            href="<%=user?.shareLink%>"
            target="_blank"
            class="btn btn-light share mt-3 rounded-0"
            >Share Profile</a
          >
        </div>
      </div>
