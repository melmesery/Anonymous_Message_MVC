    </div>

    <div class="card p-5 my-5 rounded-0 ">
      <h2 class="fw-bold">Your Messages</h2>
      <div
        class="row justify-content-center align-items-center my-2"
      >
        <%for(let i = 0; i < messages.length; i++){%>
        <div class="col-md-8 p-2">
          <div class="card bg-light rounded-0 p-2">
            <div class="d-flex align-items-end justify-content-between gap-5">
              <p class="mb-0 fs-5"><%=messages[i].message%></p>
              <a
                href="/message/<%=messages[i]._id%>/delete"
                class="btn btn-danger rounded-0"
                >Delete</a
              >
            </div>
          </div>
        </div>
        <%} %>
