<%- include("./shared/header")%>
<body>
  <div class="container signup-con">
    <div class="row align-items-center justify-content-center">
      <div class="col-md-4">
        <div class="card rounded-0 border-0 p-4 text-center">
          <form action="/auth/login" method="post">
            <div class="my-2">
              <h2 class="text-success mb-4">Welcome Back.</h2>
            </div>

            <div class="form-group my-2">
              <input
                value="<%=oldData?.email%>"
                class="form-control mb-2 rounded-0"
                type="email"
                name="email"
                placeholder="Email"
                required
              />
              <%if(emailErr){%>
              <div class="alert alert-danger text-center my-2">
                <p class="mb-0"><%=emailErr%></p>
              </div>
              <%}%> <%if(validationErr?.includes('email')){%>
              <div class="alert border border-success text-center my-2">
                <p class="mb-0">Please Enter Valid Email</p>
              </div>
              <%}%>
            </div>
            <div class="form-group my-2">
              <input
                value="<%=oldData?.password%>"
                class="form-control mb-2 rounded-0"
                type="password"
                name="password"
                placeholder="Password"
                required
              />
              <%if(validationErr?.includes('password')){%>
              <div class="alert border border-success text-center my-2">
                <p class="mb-0">Please Enter Valid Password</p>
              </div>
              <%}%>
            </div>
            <div class="form-group my-2">
              <button class="btn btn-success w-100  mb-4 rounded-0">Login</button>
              <p class="my-1">
                Don't Have Account? <a href="/auth">Register Now</a>
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("./shared/script")%>
  <script src="./shared/js/signup.js"></script>
</body>
